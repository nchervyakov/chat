{% extends 'HWIOAuthBundle::layout.html.twig' %}

{% form_theme form ':Form:bootstrap3_theme.html.twig' _self %}

{% block title 'registration.title'|trans %}

{% block hwi_oauth_content %}
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="well bs-component">
                <form action="{{ path('hwi_oauth_connect_registration', {'key': key}) }}" {{ form_enctype(form) }}
                      method="POST" class="hwi_oauth_registration_register form-horizontal">

                    <legend>{{ 'header.register' | trans({'%name%': userInformation.realName}, 'HWIOAuthBundle') }}</legend>

                    {{ form_errors(form) }}

                    {{ form_row(form.email) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.dateOfBirth) }}

                    {{ form_widget(form) }}

                    <div class="form-group">
                        <div class="col-lg-12">
                            {% if userInformation.profilePicture is not empty %}
                                <div class="form-group">
                                    <span class="col-lg-3 control-label control-label">{{ 'photo'|trans }}</span>
                                    <div class="col-lg-9 form-inline">
                                        <img src="{{ userInformation.profilePicture }}" class="registration-photo" />
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-9 col-lg-offset-3">
                            <button type="submit" class="btn btn-primary">{{ 'connect.registration.submit'|trans({}, 'HWIOAuthBundle') }}</button>
                            <a href="{{ path('homepage') }}" class="btn btn-default">{{ 'connect.registration.cancel' | trans({}, 'HWIOAuthBundle') }}</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock hwi_oauth_content %}