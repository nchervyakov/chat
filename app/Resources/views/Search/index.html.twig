{% extends '::layout.html.twig' %}

{% block title 'search'|trans %}
{% block page_title_text %}{{ 'search'|trans }}{% endblock %}

{% block page %}
    {{ parent() }}
    {% include ':Search:_search_form.html.twig' %}

    <div class="row">
        <div class="col-lg-12">

            {% if models is defined %}
                <div class="row">
                {% for model in models %}

                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <a href="{{ path('chat', {"user_id": model.id}) }}">
                                <img src="/uploads/photo/{{  model.thumbnail }}" alt="{{ model.fullName }}">
                                <div class="caption">
                                    <h3>{{- model.fullName -}}<small>, {{ model.age }}</small></h3>
                                </div>
                            </a>
                        </div>
                    </div>

                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}