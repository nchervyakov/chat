{% extends '::layout.html.twig' %}

{% block title 'search'|trans %}
{% block page_title_text %}{{ 'search'|trans }}{% endblock %}

{% block page %}
    {{ parent() }}
    {% include ':Search:_search_form.html.twig' %}

    <div class="row search-results">
        <div class="col-lg-12">

            {% if pagination is defined %}
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <h3>{{ 'total_models_found'|trans({'%count%': pagination.getTotalItemCount}) }}</h3>
                    </div>
                </div>

                <div class="row">
                    {% for model in pagination %}
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <a href="{{ path('chat', {"user_id": model.id}) }}">
                                    <div class="img-wrapper">
                                        <img src="/uploads/photo/{{ model.thumbnail }}" alt="{{ model.fullName }}">
                                    </div>
                                    <div class="caption">
                                        <h3>{{- model.fullName -}}<small>, {{ model.age }}</small></h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="row">
                    <nav class="navigation col-lg-12 col-md-12 text-right">
                        {{ knp_pagination_render(pagination) }}
                    </nav>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}