{% extends '::layout.html.twig' %}

{% block header_title %}<a href="{{ path('homepage') }}">Chat with models</a>{% endblock %}
{% block prev_title %}
    <a href="{{ path('page_about') }}">{{ 'about_site'|trans }}</a>
{% endblock %}

{% block page %}
    <h3>Models available for chat:</h3>

    <div class="row model-list model-list-online">

        {% for model in online_models %}
            {{ include(':Default:_model_online_item.html.twig') }}
        {% else %}
            <div class="col-lg-12 col-md-12 col-xs-12">
                <p>There is no online models.</p>
            </div>
        {% endfor %}

    </div>

    <h3>Models available later:</h3>

    <div class="row model-list">

        {% for model in offline_models %}
            {{ include(':Default:_model_offline_item.html.twig') }}
        {% else %}
            <div class="col-lg-12 col-md-12 col-xs-12">
                <p>There is no models.</p>
            </div>
        {% endfor %}

    </div>

