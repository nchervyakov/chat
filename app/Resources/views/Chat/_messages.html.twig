{% if hasPreviousMessages is defined and hasPreviousMessages %}
    <li class="clearfix js-previous-messages-block">
        <div class="well well-sm text-center"><a href="#" class="js-previous-messages-link previous-messages-link"
                    data-before-message-id="{{ firstInRangeMessageId }}">{{ 'chat_page.load_previous_messages'|trans }}</a></div>
    </li>
{% endif %}

{%- for message in messages -%}
    {% if message is instanceof('AppBundle\\Entity\\ImageMessage') %}
        {{ include(':Chat:_image_message.html.twig') }}
    {% else %}
        {{ include(':Chat:_message.html.twig') }}
    {% endif %}
{%- endfor -%}