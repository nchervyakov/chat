{% if admin.hasRoute('create') and admin.isGranted('CREATE')%}
    {% if admin.subClasses is empty %}
        <a class="sonata-action-element" href="{{ admin.generateUrl('create', {'type': userType}) }}">
            <i class="fa fa-plus-circle"></i>
            {{ ('link_action_create_' ~ userType)|trans }}</a>
    {% else %}
        <li class="divider" role="presentation"></li>
        {% for subclass in admin.subclasses|keys %}
            <li>
                <a href="{{ admin.generateUrl('create', {'subclass': subclass, 'type': userType}) }}">
                    <i class="fa fa-plus-circle"></i>
                    {{ ('link_action_create_' ~ userType)|trans }} {{ subclass|trans({}, admin.translationdomain) }}
                </a>
            </li>
        {% endfor %}
        <li class="divider" role="presentation"></li>
    {% endif %}
{% endif %}