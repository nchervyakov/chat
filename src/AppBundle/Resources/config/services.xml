    <parameters>
        <parameter key="app.registration.form.class">AppBundle\Form\Type\RegistrationFormType</parameter>
        <parameter key="app.profile.form.class">AppBundle\Form\Type\ProfileFormType</parameter>
    </parameters>

    <services>
        <service id="app.registration.form.type" class="%app.registration.form.class%">
            <tag name="form.type" alias="user_registration" />
            <argument>%fos_user.model.user.class%</argument>
            <argument type="service" id="fos_user.user_manager" />
        </service>

        <service id="app.profile.form.type" class="%app.profile.form.class%">
            <tag name="form.type" alias="user_profile" />
            <argument>%fos_user.model.user.class%</argument>
            <argument type="service" id="fos_user.user_manager" />
        </service>
    </services>

</container>
